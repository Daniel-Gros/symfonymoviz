{% extends 'base.html.twig' %}

{% block title %}Fiche de
	{{movie.name}}
{% endblock %}

{% block body %}

	<h1>{{ movie.name }}</h1>
	<div class="row">
		<div class="col">
			Date de sortie :
			{% if movie.releaseDate %}
				{{ movie.releaseDate.format('d/m/Y') }}
			{% else %}
				<p>N/C</p>
			{% endif %}
		</div>

		<div class="col">
			Durée:
			{% if movie.duration %}
				{{ movie.duration.format("H") }}h{{ movie.duration.format("i") }}
			{% else %}
				<p>N/C</p>
			{% endif %}
		</div>

		<div class="col">
			{% for genre in movie.genres %}
				<a href="{{ path('app_movies', {'genreId': genre.id }) }}">{{genre.name}}</a>
			{% endfor %}
		</div>

		<div class="col">
			{% for director in movie.directors %}
				Réalisateur :
				<a href="{{ path('app_movies', {'directorId': director.id}) }}">{{director.firstName}}{{director.lastName}}</a>
			{% endfor %}
		</div>
	</div>
        <div class="row">
            <div class="col">
            {% if averageRate %}
                Note moyenne :
                {% for i in range (5,1, -1) %}
                <input disabled="disabled" type="radio" id="avgrate" value="{{ i }}" {{ averageRate == i ? 'checked="checked"' : '' }}>
                {% endfor %}
            {% else %}
                <p>Il n'y a pas encore de note</p>
            {% endif %}
            </div>
        </div>

	<div class="row">
		<div class="col-lg-8">
			<p class="lead">{{movie.synopsis}}</p>
		</div>
		<div class="col-lg-4">
			{% if movie.imageName %}
				<img src="{{ vich_uploader_asset(movie, 'imageFile') }}" class="card-img-top" alt="affiche du film {{ movie.name }}" style="width: 100%; height: 25vh;">
			{% else %}
				<img src="{{ asset('build/images/default-movie.png') }}" class="card-img-top" alt="affiche du film non disponible" style="width: 100%; height: 25vh;">
			{% endif %}
		</div>
	</div>
</div>
<div class="row">
	<h2>Noter ce film</h2>
	{% if user %}
		{{ include('partials/review/_form.html.twig')}}
	{% else %}
		<p>Vous devez être connecté pour pouvoir noter ce film.Rendez-vous sur la page
			<a href="{{ path('app_login')}}">connexion</a>
		</p>
	{% endif %}
</div>
{% endblock %}
